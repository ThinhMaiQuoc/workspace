function! MapBoth(keys, rhs)
    execute 'nmap' a:keys a:rhs
    execute 'imap' a:keys '<Esc>' . a:rhs
endfunction

inoremap ( ()<left>
inoremap [ []<left>
inoremap ' ''<left>
inoremap " ""<left>
inoremap { {}<left>
inoremap ` ``<left>

nnoremap ; :
vnoremap ; :

" Navigate between split pane
call MapBoth('<C-J>', '<C-W><C-J>')
call MapBoth('<C-K>', '<C-W><C-K>')
call MapBoth('<C-L>', '<C-W><C-L>')
call MapBoth('<C-H>', '<C-W><C-H>')
