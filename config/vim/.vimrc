set nocompatible

syntax on
colorscheme molokai

set encoding=utf8
set mouse=a
set ai
set nu
set cc=80
set ts=4
set t_Co=256
set shiftwidth=4
set cursorline

set whichwrap+=<,>,h,l,[,]

hi CursorLine term=bold guibg=Grey40

set noswapfile

set list listchars=tab:»·,trail:·

set autochdir
set backspace=indent,eol,start

source ~/42/workspace/config/vim/numpad_vimrc
source ~/42/workspace/config/vim/alias_vimrc
