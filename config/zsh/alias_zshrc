# programming related command
alias cc="gcc -Wall -Wextra -Werror"
lint () { sh ~/workspace/sh/git/glint.sh }
atom () { open -a atom $@ }
vsc () { open -a Visual\ Studio\ Code $@ }

# usefull system command
alias l="ls -la"
dstore () { sh ~/workspace/sh/sys/dstore.sh }

# Install the workspace.. not used yet but need a good rework
wsinstall () { sh -c "$(curl -fsSL https://raw.githubusercontent.com/nesthub/workspace/master/sh/workspace/install.sh)" }

# CD to a particular path
42 () { cd ~/42/$@ }
workspace () { cd ~/workspace/$@ }
bernard () { cd ~/42/bernard/$@ }

# CD (recast related) to a particular path
recast () { cd ~/42/recastai/$@ }
wallace () { cd ~/42/recastai/botconnector/wallace/$@ }
gromit () { cd ~/42/recastai/botconnector/gromit/$@ }
hellobot () { cd ~/42/recastai/botconnector/hellobot/$@ }
europ () { cd ~/42/recastai/client/europ/$@ }
sfr () { cd ~/42/recastai/client/sfr/$@ }
claudie () { cd ~/42/recastai/claudie/$@ }

surveybot () { cd ~/42/recastai/surveybot/$@ }

noe () { echo "\e(1" }

run () { sh ~/workspace/sh/run.sh $@ }
arun () { open -a atom ~/workspace/sh/run.sh }
