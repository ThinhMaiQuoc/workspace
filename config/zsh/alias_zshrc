alias cc="gcc -Wall -Wextra -Werror"
alias l="ls -la"

alias zshrc-config="vim ~/42/workspace/config/zsh/.zshrc"
alias zshrc-alias="vim ~/42/workspace/config/zsh/alias_zshrc"
alias zshrc-portable="vim ~/42/workspace/config/zsh/portable_zshrc"
alias zshrc-school="vim ~/42/workspace/config/zsh/school_zshrc"
alias zshrc-load="sudo sh ~/42/workspace/sh/zsh/zshrc-load.sh

alias vimrc-config="vim ~/42/workspace/config/vim/.vimrc"
alias vimrc-bind="vim ~/42/workspace/config/vim/alias_vimrc"
alias vimrc-portable="vim ~/42/workspace/config/vim/portable_vimrc"
alias vimrc-school="vim ~/42/workspace/config/vim/school_vimrc"
alias vimrc-load="sudo sh ~/42/workspace/sh/vim/vimrc-load.sh

wsinstall () { sh -c "$(curl -fsSL https://raw.githubusercontent.com/nesthub/workspace/master/install.sh)" }

42 () { cd ~/42/$1 }

alias mt="make test"
m () { make $1 }

alias todo="vim ~/42/workspace/notes"
